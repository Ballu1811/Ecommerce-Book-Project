<div class="row border-bottom">
    <div class="col-8 offset-1">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info" asp-action="Upsert">
            <i class="fas fa-plus"></i> &nbsp;Create New Products
        </a>
    </div>
</div>
<div class="border-5 p-3 m-3">
    <table id="tblData" class="table table-bordered table-striped table-active table-dark">
        <thead>
            <tr class="text-info">   
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts {
<script src="~/js/product.js"></script>
}

